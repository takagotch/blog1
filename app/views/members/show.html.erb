<% @page_title = "member_more" %>

<h1><%= @page_title %></h1>

<p><%= link_to "edit", [:edit, @member] %></p>

<table class="attr">
	<tr>
		<th width="150">number</th>
		<td><%= @member.number %></td>
	</tr>
	<tr>
		<th>user</th>
		<td><%= @member.name %></td>
	</tr>
	<tr>
		<th>name</th>
